@model E_LAYER.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index", "Register", FormMethod.Post))
				{
					
				
				<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Ad, Soyad</label>

				
						@Html.TextBoxFor(x=>x.WriterName, new{@class="form-control"})
						@Html.ValidationMessageFor(x=>x.WriterName,"",new {@class="text-danger"})
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">E-Mail</label>
						
							@Html.TextBoxFor(x=>x.WriterMail, new{@class="form-control"})
							@Html.ValidationMessageFor(x=>x.WriterMail)
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">

							<label for="exampleInputPassword1 mb-2">Şifre</label>
						
							@Html.TextBoxFor(x=>x.WriterPass,  new{@class="form-control"})
							@Html.ValidationMessageFor(x=>x.WriterPass)
						</div>
						

						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Görsel</label>
					
							@Html.TextBoxFor(x=>x.WriterImg,  new{@class="form-control"})
							@Html.ValidationMessageFor(x=>x.WriterImg)
						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kaydet</button>
					<p>
						<a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
					</p>
				}

			</div>
		</div>
	</div>
	<br />

	<script>
		$("#btn1").click(function(){
			swal("Bilgilendirme","Dijital E-Posta ve sms ile bilgilendirmeyi kabul ettiniz.");
		})
	</script>
</section>

