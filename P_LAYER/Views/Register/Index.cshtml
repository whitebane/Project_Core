
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form  method="post">
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Ad, Soyad</label>

							<input type="text" class="form-control" id="validationDefault01" placeholder="" name="WriterName" required="">
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">E-Mail</label>
							<input type="email" class="form-control" id="validationDefault02" placeholder="" name="WriterMail" required="">
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							<input type="password" class="form-control" id="password1" placeholder="" name="WriterPass" required="">
						</div>
						

						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Görsel</label>
							<input type="text" class="form-control" id="password2" placeholder="" name="WriterImg" required="">
						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kaydet</button>
					<p>
						<a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
					</p>
				</form>

			</div>
		</div>
	</div>
	<br />

	<script>
		$("#btn1").click(function(){
			swal("Dijital E-Posta ve sms ile bilgilendirmeyi kabul ettiniz.");
		})
	</script>
</section>

